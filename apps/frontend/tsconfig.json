{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@shared": ["../../packages/shared-types/src/index"],
      "@shared/*": ["../../packages/shared-types/src/*"]
    },
    "types": [
      "vite/client",
      "vitest/globals"
    ]
  },
  "references": [
    {
      "path": "../../packages/shared-types"
    }
  ]
}